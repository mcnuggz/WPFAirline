<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        xmlns:WPFAirline="clr-namespace:WPFAirline;assembly=WPFAirline" x:Class="WpfApplication1.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Image Source="http://thefirstretirement.com/wp-content/uploads/2014/02/Airliner.jpg" Stretch="Fill"/>
        <ComboBox ItemsSource="{Binding availableFlights}" x:Name="comboBox" HorizontalAlignment="Center" Margin="0,244,0,53.8" VerticalAlignment="Center" Width="340" Height="23" SelectionChanged="comboBox_SelectionChanged">
        </ComboBox>

    </Grid>
</Window>
