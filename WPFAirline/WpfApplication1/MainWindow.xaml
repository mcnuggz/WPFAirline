<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Image Source="http://thefirstretirement.com/wp-content/uploads/2014/02/Airliner.jpg" Stretch="Fill">

        </Image>
        <ComboBox ItemsSource="{Binding Path=availableFlights}" x:Name="comboBox" HorizontalAlignment="Center" Margin="0,225,0,72.8" VerticalAlignment="Center" Width="340" Height="23" SelectionChanged="comboBox_SelectionChanged"/>

    </Grid>
</Window>
